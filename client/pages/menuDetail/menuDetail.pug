wrapper(
  loading="{{loading}}"
  errorData="{{errorData}}"
)
  view.black(slot="page")
    view.header.bg-white.mb10.pb10
      view.banner
        image.banner-img.mb20(
          src="{{menu.pic}}"
        )

      view.font20.flex.flex-center {{menu.title}}

    view.body.bg-white
      view.font16.mb10 食材
      view.font14.mb10 {{menu.foodDesc}}
      view.font16.mb10 调味品
      view.font14.mb10 {{menu.flavor}}
      view.font16.mb10 做法
      view.font14.mb10
        wxParse(
          nodes="{{menu.desc}}"
        )

